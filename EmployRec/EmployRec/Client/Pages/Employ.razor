@code {

    protected override async Task OnInitializedAsync()
    {
        await EmployeeService.GetEmployees();
    }
    void ShowRecord(int id)
    {
        Console.WriteLine(id);
        NavigationManager.NavigateTo($"punch{id}");
    }
